{
  "name": "tailwind-static-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev:css": "node build-css.js --watch",
    "build:css": "node build-css.js",
    "build": "npm run build:css && mkdir -p dist && cp index.html dist/",
    "start": "npm run build && npx serve dist"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  }
}
